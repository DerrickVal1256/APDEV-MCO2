<!DOCTYPE html>
<html>
<head>
    <title>Lab Reservation</title>

    <link href="https://fonts.google.com/share?selection.family=Inter:wght@100..900|Kumbh+Sans:wght@400;700" rel="stylesheet">
    <link href="../css/EditRes.css" rel="stylesheet">
    <link href="../css/sidebar.css" rel="stylesheet">

</head>
<body>
    <div id="sidebar">

        <div class="title">
            <img src="https://scontent.fmnl17-3.fna.fbcdn.net/v/t1.15752-9/422985123_753783996378459_4894069643965514189_n.png?_nc_cat=106&ccb=1-7&_nc_sid=510075&_nc_ohc=e76UgocpslkAX9jCg7q&_nc_ht=scontent.fmnl17-3.fna&oh=03_AdROebqlAFFjPMINUtt1795si5DnMKXPuj7o_l7oAoSicg&oe=65F5D9A8">
        </div>

        <div class="profile">
            <img src="https://singifyai.fineshare.com/song-ai/covers/garfield.webp"> <p>Garfield Cat</p> <a href="Profile.html"> <img src="https://cdn-icons-png.flaticon.com/128/271/271228.png" id="arrow"></a>
        </div>

        <div class="nav-items">
            <div class="menu-item" id="home">
                <a href="index.html"><p>Home</p></a> 
            </div>

            <div class="menu-item" id="reservation">
                <a href="Reservation.html"><p>Reservation</p></a>
            </div>

            <div class="menu-item" id="help">
                <a href="HelpDesk.html"><p>Help</p></a>
            </div>

            <div class="menu-item" id="logout">
                <a href="LoginPage.html"><p>Log Out</p></a>
            </div>
        </div>
        
    </div>

    <div id="main">

        <h1>My Reservations</h1> 
        {{#each reservations}}
            <div class="box"> <p><b>{{this.laboratory}}</b></p> <p>Seat <b>{{this.seat}}</b></p> <p>{{this.time}}</p> <p>{{this.date}}</p> </div>
        {{/each}}

    </div>

    <script>
        document.querySelectorAll('.box > button').forEach(function(button) {
            button.addEventListener('mouseover', function() {
                this.parentElement.style.backgroundColor = '#EBEBEB';
            });
            button.addEventListener('mouseout', function() {
                this.parentElement.style.backgroundColor = ''; // Reset to original background color
            });
        });
    </script>
</body>
</html>